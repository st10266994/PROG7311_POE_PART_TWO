@model PROG7311_PART_TWO.Models.Product
@{
    ViewData["Title"] = "Add New Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 500px;">
            <h1 class="display-5">Add New Product</h1>
            <hr class="w-25 mx-auto text-primary" style="opacity: 1;">
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Display any success messages -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="CreateProduct" enctype="multipart/form-data" class="bg-white p-4 rounded shadow">
                    <!-- Display validation summary prominently -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Category" class="form-label"></label>
                        <select asp-for="Category" class="form-select" required>
                            <option value="">Select a category</option>
                            <option value="Solar Irrigation">Solar Irrigation Systems</option>
                            <option value="Wind Turbines">Wind Turbines</option>
                            <option value="Biogas Solutions">Biogas Energy Solutions</option>
                            <option value="Solar Panels">Solar Panels</option>
                            <option value="Energy Storage">Energy Storage Systems</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ProductionDate" class="form-label"></label>
                        <input asp-for="ProductionDate" class="form-control" type="date" required />
                        <span asp-validation-for="ProductionDate" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="imageFile" class="form-label">Product Image</label>
                        <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                        <small class="text-muted">Upload an image for your product (optional)</small>
                    </div>

                    <div class="form-group d-flex justify-content-between mt-4">
                        <a asp-action="ProductIndex" class="btn btn-secondary">Back to Products</a>
                        <button type="submit" class="btn btn-primary">Create Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Add client-side validation to ensure required fields are filled
        $(document).ready(function () {
            $('form').submit(function (e) {
                // Clear previous error messages
                $('.field-validation-error').empty();

                // Validate Name
                if ($('#Name').val() === '') {
                    $('#Name').siblings('.field-validation-error').text('Name is required.');
                    e.preventDefault();
                }

                // Validate Description
                if ($('#Description').val() === '') {
                    $('#Description').siblings('.field-validation-error').text('Description is required.');
                    e.preventDefault();
                }

                // Validate Category
                if ($('#Category').val() === '') {
                    $('#Category').siblings('.field-validation-error').text('Please select a category.');
                    e.preventDefault();
                }

                // Validate Production Date
                if ($('#ProductionDate').val() === '') {
                    $('#ProductionDate').siblings('.field-validation-error').text('Production date is required.');
                    e.preventDefault();
                }
            });
        });
    </script>
}